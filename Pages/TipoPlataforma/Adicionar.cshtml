@page
@model Petrol.Pages.TiposPlataformas.CreateModel
@{
}

<div class="box_secundario">
    <h3 class="texto_verde">Tipo de Plataforma: Adicionar</h3>
    <div class="faixa_amarela"></div>
    @if (Model.msgErro.Length > 0)
    {
        <div>
            <strong>@Model.msgErro</strong>
        </div>
    }
</div>

<div class="box_secundario">
    <form method="post">
        <div>
            <label>Tipo de Plataforma</label>
            <div>
                <input type="text" name="nome" required value="@Model.infoTipoPlataforma.Nome" />
            </div>
        </div>
        <div>
            <label>Descrição</label>
            <div>
                <input type="text" name="descricao" size="100" value="@Model.infoTipoPlataforma.Descricao" />
            </div>
        </div>
        <div>
            <label>Lâmina</label>
            <div>
                <input type="text" name="lamina" size="100" value="@Model.infoTipoPlataforma.Lamina" />
            </div>
        </div>
        <div>
            <input type="checkbox" name="perfuracao" />
            <label>Perfuração</label>
        </div>
        <div>
            <input type="checkbox" name="producao" />
            <label>Produção</label>
        </div>
        <div>
            <input type="checkbox" name="controle_pocos" />
            <label>Controle de Poços</label>
        </div>
        <div>
            <label>Escoamento</label>
            <div>
                <input type="text" name="escoamento" size="100" value="@Model.infoTipoPlataforma.Escoamento" />
            </div>
        </div>
        <div>
            <label>Vantagem</label>
            <div>
                <input type="text" name="vantagem" size="100" value="@Model.infoTipoPlataforma.Vantagem" />
            </div>
        </div>
        <div>
            <label>Imagem</label>
            <div>
                <input type="text" name="imagem" value="@Model.infoTipoPlataforma.Imagem" />
            </div>
        </div>

        @if (Model.msgSucesso.Length > 0)
        {
            <div>
                <strong>@Model.msgSucesso</strong>
            </div>
        }

        <div>
            <br />
            <button type="submit" class="btn_padrao">Salvar</button>
        </div>
    </form>
</div>
